<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark orange application theme. -->
    <style name="Theme.DarkOrange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brownOrange</item>
        <item name="colorPrimaryVariant">@color/brownOrange</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowBackground">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkGray</item>
        <item name="colorSecondaryVariant">@color/darkGray</item>
        <item name="colorOnSecondary">@color/darkGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Red application theme. -->
    <style name="Theme.DarkRed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryVariant">@color/darkRed</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowBackground">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkGray</item>
        <item name="colorSecondaryVariant">@color/darkGray</item>
        <item name="colorOnSecondary">@color/darkGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PreferenceScreen" parent="Theme.DarkOrange">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>